        <activity android:alwaysRetainTaskState="true" android:exported="true" android:launchMode="singleTask" android:clearTaskOnLaunch="false" android:configChanges="keyboardHidden|orientation" android:finishOnTaskLaunch="false" android:name=".ArkeLauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>